<%=render 'shared/errors',obj: @employee_profile  %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for @employee_profile, :html => { multipart: true,:class => "form-horizontal image" } do |f| %>
         <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :first_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :first_name,id: "mmm",class: "form-control",placeholder: "Enter first_name",autofocus: true  %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :last_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :last_name,class: "form-control",placeholder: "Enter last_name"  %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :dob %>
          </div>
          <div class="col-sm-8">
            <%= f.date_select  :dob, start_year: 1900,class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :gender %>
          </div>
          <div class="col-sm-8">
            <%= f.select :gender,  EmployeeProfile::GENDER_TYPES ,class: "form-control" %>
          </div>
        </div>


        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :status %>
          </div>
          <div class="col-sm-8">
            <%= f.select :relation_status,  EmployeeProfile::STATUS_TYPES,id: "employee_profile_relation_status",:onchange=> 'spouse_field()',class: "form-control" %>
          </div>
        </div>
        <script type="text/javascript">
            $(document).ready(spouse_field);
            $('select').change(spouse_field);
            function spouse_field(){
                var check_status = document.getElementById("employee_profile_relation_status").value;
                if ((check_status == "Single")||(check_status == "Not Saying")){
                   document.getElementById("spouse_field_show").style.display = 'none';
                }
                else {
                document.getElementById("spouse_field_show").style.display = 'block';
            }
            }
           </script>
            <div id="spouse_field_show"  class="form-group" style="display:block" >
              <div class="control-label col-sm-2">
                <%= f.label :spouse_name %>
              </div>
              <div class="col-sm-8">
                <%= f.text_field :spouse_name,id: 'employee_profile_spouse_name',class: "form-control",placeholder: "Enter Spouse's Name"  %>
              </div>
            </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :father_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :father_name,class: "form-control",placeholder: "Enter Father's Name"  %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :mother_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :mother_name,class: "form-control",placeholder: "Enter Mother's Name"  %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :SIN %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field   :sin,class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Apartment_Number %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field   :address_1,class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Building_Number %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field   :address_2,class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Street %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field   :street,class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :city %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field   :city,class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Postal_Code %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :postal_code,class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Province %>
          </div>
          <div class="col-sm-8">
            <div class="field">
           <%= f.subdivision_select :province, @employee_profile.country ,class: "form-control"%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :country %>
          </div>
          <div class="col-sm-8">
            <%= f.country_select  :country, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :nationality %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :nationality,class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :telephone %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :telephone,class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit(@employee_profile.new_record? ? "SUBMIT" : "Update", class: "btn btn-primary btn-lg")   %>
          </div>
        </div>
        </div>
    <% end %>
    <div class=" col-xs-offset-4">
      [<%= link_to 'Cancel Request and Return to Homepage',root_path  %>]
    </div>
    </div>
